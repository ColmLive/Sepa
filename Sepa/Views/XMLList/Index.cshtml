@using Sepa.Models
@model List<Group<string, Invoice>>

@{
	ViewBag.Title = "LINQ Grouping";
}
<ul class="pagination">
	<li><a href="#">1</a></li>
	<li><a href="#">2</a></li>
	<li><a href="#">3</a></li>
	<li><a href="#">4</a></li>
	<li><a href="#">5</a></li>
</ul>
<h2>Summary - Invoices by Vendor</h2>

<table>
	<thead><tr><th>Vendor&nbsp;&nbsp;</th><th>Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th><th>Invoice&nbsp;&nbsp;</th><th>Status Code&nbsp;&nbsp;</th><th>Description&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th><th style="text-align: right"><b>VALUE</b></th></tr></thead>
	<tbody>
		@foreach (var group in Model)
		{
		<tr>
			<th colspan="3">@group.Key</th>
		</tr>

			foreach (var data in group.Values)
			{
		<tr>
			<td>@data.Vendor_ID   </td>
			<td>@data.Vendors.Vendor_Name   </td>
			<td>@data.Invoice_ID   </td>
			<td>@data.StatusCode   </td>
			<td>@data.Posting_Desc   </td>
			<td style="text-align: right"><b>@string.Format("{0:N2}", data.Invoice_Value)</b></td>
		</tr>
			}
		}
	</tbody>
</table>