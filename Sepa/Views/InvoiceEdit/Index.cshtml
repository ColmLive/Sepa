
@model List<Sepa.Models.Invoice>

@{

	ViewBag.Title = "Index";

}

<h2>Invoice Edit List</h2>

@using (Html.BeginForm("Index", "InvoiceEdit", FormMethod.Post))

{
	<tr>
		<td colspan="4">
			<input type="submit" value="Submit" />
		</td>
	</tr>
	<table class="table">

		@for (int i = 0; i < Model.Count; i++)

		{
			<tr>
				<td>
					@Html.Hidden("Invoices.Index", (@i))
					@Html.TextBox("Invoices[" + @i + "].Invoice_ID",
					Model[i].Invoice_ID, new {@readonly="readonly"})
				</td>

				<td>
					@Html.TextBox("Invoices[" + @i + "].Vendor_ID",
					Model[i].Vendor_ID)
				</td>

				<td>
					@Html.TextBox("Invoices[" + @i + "].Posting_Desc",
					Model[i].Posting_Desc)
				</td>

				<td>
					@Html.TextBox("Invoices[" + @i + "].Invoice_Value",
					Model[i].Invoice_Value)
				</td>
				<td>
					@Html.TextBox("Invoices[" + @i + "].StatusCode",
					Model[i].StatusCode)
				</td>


			</tr>

		}

		<tr>
			<td colspan="4">
				<input type="submit" value="Submit" />
			</td>
		</tr>

	</table>

}
